<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">
        <ImageView
            android:id="@+id/arrowback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back"/>
        <TextView
            android:id="@+id/namaakun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/arrowback"
            android:layout_toEndOf="@id/arrowback"
            android:text="_iknip"/>
        <ImageView
            android:id="@+id/bell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/arrowback"
            android:layout_toLeftOf="@+id/titik3"
            android:src="@drawable/ic_bell"/>
        <ImageView
            android:id="@+id/titik3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/arrowback"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/namaakun"
            android:src="@drawable/ic_titik_tiga"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/arrowback"
            android:id="@+id/linear1"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/pp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignTop="@id/arrowback"
                android:layout_marginRight="20dp"
                android:layout_alignParentEnd="true"

                android:src="@drawable/pp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginRight="30dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/postingan1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/arrowback"
                    android:layout_toEndOf="@id/arrowback"
                    android:text="6956"/>
                <TextView
                    android:id="@+id/postingan2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/arrowback"
                    android:layout_toEndOf="@id/arrowback"
                    android:text="Postingan"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="30dp"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/pengikut1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/arrowback"
                    android:layout_toEndOf="@id/arrowback"
                    android:text="27,7jt"/>
                <TextView
                    android:id="@+id/pengikut2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/arrowback"
                    android:layout_toEndOf="@id/arrowback"
                    android:text="Pengikut"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/mengikut1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/arrowback"
                    android:layout_toEndOf="@id/arrowback"
                    android:text="219"/>
                <TextView
                    android:id="@+id/mengikuti2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/arrowback"
                    android:layout_toEndOf="@id/arrowback"
                    android:text="Mengikut"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/txt_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear1"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:text="Ikhwan Hanipp"/>

        <TextView
            android:id="@+id/txt_description2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_description"
            android:layout_marginTop="1dp"
            android:text="Programmer"/>
        <TextView
            android:id="@+id/txt_description3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_description2"
            android:layout_marginTop="1dp"
            android:text="“You might not think that programmers are  artists, but programming is an extremely creative profession. It’s  logic-based creativity.” – John Romero  💻"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button1"
            android:layout_width="200dp"
            android:text="edit profil"
            android:textAllCaps="false"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_description3"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button2"
            android:layout_width="200dp"
            android:text="edit profil"
            android:layout_toRightOf="@+id/button1"
            android:textAllCaps="false"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_description3"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@id/button2"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/icon1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:src="@drawable/ic_bell"/>
            <ImageView
                android:id="@+id/icon2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_titik_tiga"/>
            <ImageView
                android:id="@+id/icon3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_titik_tiga"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iconhome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="26dp"
                android:src="@drawable/ic_home"/>
            <ImageView
                android:id="@+id/iconbawah2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="26dp"
                android:src="@drawable/ic_search"/>
            <ImageView
                android:id="@+id/iconbawah3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="26dp"
                android:src="@drawable/ic_upload"/>
            <ImageView
                android:id="@+id/iconbawah4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="26dp"
                android:src="@drawable/ic_reels"/>
            <ImageView
                android:id="@+id/iconbawah5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="26dp"
                android:src="@drawable/ic_profile_active"/>
        </LinearLayout>
    </RelativeLayout>





</RelativeLayout>